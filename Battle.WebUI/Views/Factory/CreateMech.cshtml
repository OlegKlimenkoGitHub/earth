@model Battle.WebUI.Models.Factory

@{
    Layout = null;
}


@if(@Model.ours == true){
using (Html.BeginForm())
{
    @:Order commander!
    <br>
    @:What mechanisms need to be made in the next turn?
    <hr>
    @:Design: 
    @Html.DropDownList("designesdropdown", new SelectList(@Model.designes, "rid", "name"))
    <br>
    @:Quantity: 
    @Html.EditorFor(m => m.qnt)
    <br>
    <br>
    <input id="btncreatemech" type="submit" value="create mechanism" style="width: 480px" />
}
}
else {
    @:Commander! <br>
    @:This factory is not ours! <br>
}
