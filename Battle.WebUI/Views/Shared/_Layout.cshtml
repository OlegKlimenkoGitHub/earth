<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Battle</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <script src="~/Scripts/jquery-1.9.1.min.js"></script>

        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/Bootstarp")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/Script/Bootstrap")
        <link rel="stylesheet" href="/Content/jquery-jvectormap-2.0.2.css" type="text/css" media="screen"/>
        <link rel="stylesheet" href="/Content/my.css" type="text/css" media="screen"/>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Earth", "Index", "Game")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("New game", "ChooseMenu", "Game", new {idMenu = 6}, null)</li>
                            <li>@Html.ActionLink("Rules", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav> 
                </div>
            </div>
        </header>

        @RenderBody()	

        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; Oleg Klimenko</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/Scripts/jquery.signalR-2.2.0.min.js")

        <script src="@Url.Content("~/Scripts/jquery-jvectormap-2.0.2.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-jvectormap-world-mill-en.js")" type="text/javascript"></script>

        <link href="http://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css" rel="stylesheet">
        <script src="http://code.jquery.com/jquery-1.10.2.js"></script>
        <script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
        <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
        <script src="~/signalr/hubs"></script>
        
        @RenderSection("scripts", required: false)
        @RenderSection("javascript", required: false)

    </body>
</html>
